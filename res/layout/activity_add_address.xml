<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:orientation="vertical" 
    android:id="@+id/parent" 
     
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
   xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@+id/add_address_rel_tou" 
       
        android:layout_width="fill_parent" 
        android:layout_height="47dip">
        <ImageView 
            android:id="@+id/add_address_back"
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
              android:layout_marginLeft="3.0dip" 
              android:src="@drawable/back" 
              android:layout_alignParentLeft="true" 
              android:layout_centerVertical="true" 
               />
        <TextView android:textSize="16.0sp" 
            android:gravity="center_vertical" 
            android:id="@id/textview_title" 
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:text="新增地址" 
              android:layout_centerHorizontal="true" 
              android:layout_centerVertical="true" />
        
    </RelativeLayout>
     <ImageView 
        android:id="@id/iv_xian"
         android:layout_width="fill_parent"
          android:layout_height="wrap_content"
           android:src="@drawable/logo_xian" 
           android:scaleType="fitXY" 
           android:layout_below="@id/add_address_rel_tou" />
    <LinearLayout
         android:orientation="vertical" 
         android:id="@+id/add_address_second" 
         android:background="@drawable/yisisi"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content"
           android:layout_marginTop="10.0dip" 
           android:layout_below="@id/iv_xian">
        <RelativeLayout 
            android:layout_width="fill_parent"
             android:layout_height="wrap_content"
              android:layout_weight="1.0">
            <TextView 
                android:textSize="16.0sp" 
                android:id="@+id/te" 
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_marginLeft="8.0dip"
                  android:text="收货人姓名:"
                   android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
            <EditText 
                android:textSize="14.0sp" 
                android:id="@+id/create_address_name"
                 android:background="@null" 
                 android:layout_width="wrap_content"
                  android:layout_height="40.0dip" 
                  android:layout_marginLeft="8.0dip"
                   android:text="" 
                   android:layout_toLeftOf="@+id/img" 
                   android:layout_toRightOf="@id/te"
                    android:layout_centerVertical="true" />
            <ImageView 
                android:id="@+id/img" 
                android:visibility="invisible" 
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:src="@drawable/back" 
                  android:layout_alignParentRight="true" />
        </RelativeLayout>
        
        <ImageView
             android:background="@drawable/logo_xian" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
              android:layout_marginLeft="8.0dip" 
              android:layout_marginRight="8.0dip" />
        <RelativeLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
             android:layout_weight="1.0">
            <TextView 
                android:textSize="16.0sp" 
                android:id="@id/te" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:layout_marginLeft="8.0dip" 
                  android:text="手机号码:" 
                  android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true" />
            <EditText 
                  android:textSize="14.0sp" 
                  android:id="@+id/create_address_phone"
                  android:background="@null"
                   android:layout_width="wrap_content" 
                   android:layout_height="30.0dip" 
                   android:layout_marginLeft="8.0dip" 
                   android:text="" 
                   android:layout_toLeftOf="@id/img" 
                   android:layout_toRightOf="@id/te" 
                   android:layout_centerVertical="true"
                    android:inputType="number" />
            
            <ImageView 
                android:id="@id/img" 
                android:visibility="invisible" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/back" 
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        
       
          <LinearLayout 
             android:orientation="vertical" 
             android:id="@+id/third" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" 
             android:gravity="center_vertical"
             android:layout_gravity="center_vertical"
             >
            
            
            <ImageView 
                android:background="@drawable/logo_xian"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:layout_marginLeft="8.0dip" 
                 android:layout_marginRight="8.0dip" />
           
           <HorizontalScrollView 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scrollbars="none"
                android:layout_gravity="center_vertical"
                
                >
            
            <LinearLayout
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:orientation="horizontal"
                 android:gravity="center_vertical"
                 android:layout_gravity="center_vertical"
                 >
               
                  <TextView 
                      android:textSize="16.0sp"
                      android:id="@id/te"
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content" 
                       android:layout_marginLeft="8.0dip" 
                       android:text="所在地区:" 
                        android:gravity="center_vertical"
                         />
                
                   
                   <EditText 
                       android:id="@+id/address_1"
                       android:textSize="16.0sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:hint="输入"
                       />
                   
                
                   <TextView 
                      android:textSize="16.0sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" 
                       android:text="省/市" 
                        android:gravity="center_vertical"
                        />
                
                 <EditText 
                        android:id="@+id/address_2"
                       android:textSize="16.0sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:hint="输入"
                       
                       />
                
                <TextView 
                       android:textSize="16.0sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" 
                       android:text="市" 
                       android:gravity="center_vertical"
                       />
                
                 <EditText 
                       android:id="@+id/address_3"
                       android:hint="输入"
                       android:textSize="16.0sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       
                       
                       />
                
                <TextView 
                      android:textSize="16.0sp"
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content" 
                       android:text="县/区 " 
                       android:gravity="center_vertical"
                        
                        />
          
           
            </LinearLayout>
           
             
            </HorizontalScrollView>
            
            
            <ImageView 
                android:background="@drawable/logo_xian"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:layout_marginLeft="8.0dip" 
                 android:layout_marginRight="8.0dip" />
            
            
            
            <RelativeLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                <TextView
                     android:textSize="16.0sp" 
                     android:id="@id/te" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="8.0dip" 
                     android:text="详细地址:" 
                     android:layout_alignParentLeft="true" 
                     android:layout_centerVertical="true" />
                <EditText 
                    android:textSize="14.0sp" 
                    android:id="@+id/create_address_detail" 
                    android:background="@null" 
                    android:layout_width="wrap_content" 
                    android:layout_height="40.0dip" 
                    android:layout_marginLeft="8.0dip" 
                    android:text="" 
                    android:singleLine="true" 
                    android:layout_toLeftOf="@id/img" 
                    android:layout_toRightOf="@id/te" 
                    android:layout_centerVertical="true" />
                <ImageView 
                    android:id="@id/img" 
                    android:visibility="invisible" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/back" 
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <ImageView 
                android:background="@drawable/logo_xian" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="8.0dip" 
                android:layout_marginRight="8.0dip" />
        </LinearLayout>
        
        
        
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:id="@+id/four" 
            android:visibility="visible" 
            android:layout_width="wrap_content"
             android:layout_height="wrap_content" 
             android:layout_marginTop="8.0dip" 
             android:layout_below="@id/third">
            
            <CheckBox 
                android:id="@+id/create_address_isdefault" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="4.0dip" 
                android:background="@drawable/default_address_selector"
                android:button="@null"
                 />
            <TextView 
                android:layout_gravity="center_vertical" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="是否设置为默认地址" />
        </LinearLayout>
        <Button
             android:textSize="16.0sp" 
             android:textColor="@android:color/white" 
             android:id="@+id/create_address_ok"
             android:background="@drawable/address_delete_bg" 
             android:layout_width="fill_parent"
              android:layout_height="wrap_content" 
              android:layout_margin="15.0dip" 
              android:text="保存" 
              android:layout_below="@id/four" 
              />
   
        </LinearLayout>
 

</RelativeLayout>