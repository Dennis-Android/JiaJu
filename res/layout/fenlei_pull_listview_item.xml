<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
         
    
     
       <RelativeLayout 
           android:id="@+id/fenlei_pull_listview_item_image_re"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
         <ImageView 
          android:layout_centerInParent="true"
          android:id="@+id/fenlei_pull_listview_item_image"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/ic_launcher"
          android:padding="2dp"
          />
          <ImageView 
           android:layout_centerInParent="true"
          android:id="@+id/fenlei_pull_listview_item_qiangguang"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:src="@drawable/qiangguang"
          android:visibility="gone"
          
          /> 
           
           
       </RelativeLayout> 
    
    
      
      
      <!--商品名称  -->
      <TextView
          android:id="@+id/fenlei_pull_listview_item_nameText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="11dp"
          android:layout_marginTop="4dp"
          android:layout_toRightOf="@+id/fenlei_pull_listview_item_image_re"
          android:paddingBottom="4dp"
          android:text=" " />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/fenlei_pull_listview_item_image_re"
          android:layout_alignLeft="@+id/fenlei_pull_listview_item_nameText"
          
          android:layout_below="@+id/fenlei_pull_listview_item_nameText" >

          
          

         
           
           
           <!--现价-->
          <TextView
              android:id="@+id/fenlei_pull_listview_item_newprice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerVertical="true"
              
              android:textColor="#ff0000"
              android:textSize="13sp" />

          
          <!-- 原价-->
          <TextView
              android:id="@+id/fenlei_pull_listview_item_oldprice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="31dp"
              android:layout_toRightOf="@+id/fenlei_pull_listview_item_newprice"
               android:layout_centerVertical="true"
              
              android:textColor="#808080"
              android:textSize="13sp" />

          <!--划线-->
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="0.99dp"
              android:layout_centerVertical="true"
              android:layout_alignLeft="@+id/fenlei_pull_listview_item_oldprice"
              android:layout_alignRight="@+id/fenlei_pull_listview_item_oldprice"
              android:background="#808080" />
          
              <!-- 折扣-->
              <TextView
                   android:id="@+id/fenlei_pull_listview_item_DiscountDese"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:background="#ff0000"
                   android:text=""
                   android:textSize="10sp"
                   android:layout_marginRight="5.0dip"
                   android:textColor="#ffffff"
                   android:padding="3dp"
                   />
           
          
      </RelativeLayout>
      
     </RelativeLayout>
  
  