<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    >
    
      <!--用户头像-->
        <view.CircleImageView 
         android:id="@+id/listview_comment_item_photo"   
         android:gravity="center_vertical"          
         android:layout_width="34dp"
         android:layout_height="34dp"   
         android:src="@drawable/tab_fifth_1"
         android:padding="3dp"
         android:layout_marginTop="14dp"
         />
        
       
         <!--用户名-->
        <TextView 
            android:id="@+id/listview_comment_item_NickName"  
            android:layout_toRightOf="@+id/listview_comment_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:textColor="#808080"
            />
        
        
         <!--内容  -->
         <TextView 
            android:id="@+id/listview_comment_item_Content"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"            
            android:layout_below="@+id/listview_comment_item_NickName"
            android:layout_toRightOf="@+id/listview_comment_item_photo"
            android:paddingLeft="3dp"
            android:paddingTop="3dp" 
            android:textSize="18sp"
            />
        
        
        
        <!-- 评论时间 -->
       <TextView 
           
           android:id="@+id/listview_comment_item_time"  
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:text="2014893"
           android:padding="3dp"
           android:textColor="#808080"
           />
        
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="25dp"
           android:layout_below="@+id/listview_comment_item_Content"
           android:layout_toRightOf="@+id/listview_comment_item_photo"
           android:background="#808080"
            />
    
</RelativeLayout>
